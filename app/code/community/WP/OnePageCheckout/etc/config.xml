<?xml version="1.0"?>
<config>
    <modules>
        <WP_OnePageCheckout>
            <version>3.7.5</version>
        </WP_OnePageCheckout>
    </modules>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <WP_OnePageCheckout before="Mage_Checkout">WP_OnePageCheckout</WP_OnePageCheckout>
                    </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <onepagecheckout>
                    <file>webandpeople/onepagecheckout.xml</file>
                </onepagecheckout>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <wp_onepagecheckout_layout_update>
                        <type>singleton</type>
                        <model>onepagecheckout/observer</model>
                        <method>observeLayoutHandleInitialization</method>
                    </wp_onepagecheckout_layout_update>
                </observers>
            </controller_action_layout_load_before>
            <checkout_type_onepage_save_order>
                <observers>
                    <onepagecheckout_newsletter_subscription>
                        <type>singleton</type>
                        <class>onepagecheckout/observer</class>
                        <method>checkNewsletterSubscription</method>
                    </onepagecheckout_newsletter_subscription>
                    <onepagecheckout_customer_comments>
                        <type>singleton</type>
                        <class>onepagecheckout/observer</class>
                        <method>setCustomerOrderComments</method>
                    </onepagecheckout_customer_comments>
                </observers>
            </checkout_type_onepage_save_order>
        </events>
        <translate>
            <modules>
                <onepagecheckout>
                    <files>
                        <default>WP_OnePageCheckout.csv</default>
                    </files>
                </onepagecheckout>
            </modules>
        </translate>
    </frontend>
    <global>
        <blocks>
            <giftmessage>
                <rewrite>
                    <message_inline>WP_OnePageCheckout_Block_GiftMessage_Inline</message_inline>
                </rewrite>
            </giftmessage>
            <onepagecheckout>
                <class>WP_OnePageCheckout_Block</class>
            </onepagecheckout>
        </blocks>
        <models>
            <paypal>
                <rewrite>
                    <observer>WP_OnePageCheckout_Model_Paypal_Observer</observer>
                </rewrite>
            </paypal>
            <sales>
                <rewrite>
                    <quote>WP_OnePageCheckout_Model_Quote</quote>
                </rewrite>
            </sales>
            <onepagecheckout>
                <class>WP_OnePageCheckout_Model</class>
            </onepagecheckout>
        </models>
        <!--resources>
                        <onepagecheckout_setup>
                                <setup>
                                        <module>WP_OnePageCheckout</module>
                                </setup>
                        </onepagecheckout_setup>
                </resources-->
        <helpers>
            <onepagecheckout>
                <class>WP_OnePageCheckout_Helper</class>
            </onepagecheckout>
        </helpers>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <onepagecheckout>
                    <file>webandpeople/onepagecheckout.xml</file>
                </onepagecheckout>
            </updates>
        </layout>
        <events>
            <controller_action_layout_load_before>
                <observers>
                    <wp_onepagecheckout_layout_update>
                        <type>singleton</type>
                        <model>onepagecheckout/config_observer</model>
                        <method>addCustomLayoutHandle</method>
                    </wp_onepagecheckout_layout_update>
                </observers>
            </controller_action_layout_load_before>
            <admin_system_config_changed_section_onepage_checkout>
                <observers>
                    <onepagecheckout>
                        <type>singleton</type>
                        <class>onepagecheckout/config_observer</class>
                        <method>afterSaveOnepagecheckoutSettings</method>
                    </onepagecheckout>
                </observers>
            </admin_system_config_changed_section_onepage_checkout>
            <admin_system_config_changed_section_checkout>
                <observers>
                    <onepagecheckout>
                        <type>singleton</type>
                        <class>onepagecheckout/config_observer</class>
                        <method>afterSaveOrignCheckoutSettings</method>
                    </onepagecheckout>
                </observers>
            </admin_system_config_changed_section_checkout>
            <admin_system_config_changed_section_sales>
                <observers>
                    <onepagecheckout>
                        <type>singleton</type>
                        <class>onepagecheckout/config_observer</class>
                        <method>afterSaveOrignSalesSettings</method>
                    </onepagecheckout>
                </observers>
            </admin_system_config_changed_section_sales>
        </events>
    </adminhtml>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <onepage_checkout translate="title" module="onepagecheckout">
                                            <title><![CDATA[Web & People: OnePage Checkout]]></title>
                                            <sort_order>2000</sort_order>
                                        </onepage_checkout>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <onepage_checkout>
            <general>
                <enabled>0</enabled>
                <ie6_ignore>1</ie6_ignore>
                <update_total_after_payment>1</update_total_after_payment>
                <guest_checkout>1</guest_checkout>
                <create_account_checked>1</create_account_checked>
                <customer_must_be_logged>1</customer_must_be_logged>
                <version>3.7.5</version>
            </general>
            <layout>
                <type>standard</type>
                <enable_discount>1</enable_discount>
                <shipping_disabled>0</shipping_disabled>
                <enable_different_shipping>1</enable_different_shipping>
                <clear_different_shipping>0</clear_different_shipping>
            </layout>
            <fields_settings>
                <country>1</country>
                <region>1</region>
                <postcode>1</postcode>
                <city>1</city>
                <street_line1>1</street_line1>
                <telephone>1</telephone>
                <fax>opt</fax>
                <company>opt</company>
                <comments>0</comments>
            </fields_settings>
            <newsletter_subscription>
                <enabled>0</enabled>
                <checked>0</checked>
                <visibility>all</visibility>
            </newsletter_subscription>
            <polls>
                <enabled>0</enabled>
                <items/>
            </polls>
        </onepage_checkout>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <about_webandpeople translate="title" module="onepagecheckout">
                                            <title><![CDATA[Web & People: About Us]]></title>
                                            <sort_order>1000</sort_order>
                                        </about_webandpeople>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
